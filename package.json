{
  "name": "vastraverse-fullstack",
  "version": "1.0.0",
  "description": "VastraVerse - Indian Fashion E-commerce Platform",
  "scripts": {
    "build": "npm run build:all",
    "build:all": "npm run install:all && npm run build:frontend && npm run build:functions",
    "build:frontend": "cd frontend && npm run build",
    "build:functions": "cd netlify/functions && npm install",
    "dev": "netlify dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "start": "netlify dev",
    "install:all": "cd frontend && npm install && cd ../backend && npm install"
  },
  "keywords": [
    "ecommerce",
    "fashion",
    "indian",
    "react",
    "nodejs",
    "supabase",
    "netlify"
  ],
  "author": "VastraVerse Team",
  "license": "MIT",
  "dependencies": {
    "@netlify/functions": "^2.4.1",
    "@supabase/supabase-js": "^2.38.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "react-router-dom": "^7.9.6",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "concurrently": "^8.2.2",
    "netlify-cli": "^17.10.1"
  }
}
